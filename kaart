            { name: "Carrières de Sprimont et de Chanxhe S.A.", location: [50.483, 5.583], material: "Kalksteen", alt_names: ["Kalksteen van Sprimont", "Kalksteen van Chanxhe"], composition: "Blauwe hardsteen" }, // Sprimont
            { name: "Pierre Bleue de Wallonie S.A.", location: [50.350, 4.866], material: "Blauwe Hardsteen", alt_names: ["Blauwe Hardsteen van Wallonië"] }, // Namur
