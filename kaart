    <script>
        var map = L.map('belgium-map').setView([50.5, 4.5], 7); // Centered on Belgium, zoom level 7
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Steengroeve data met locaties en namen.  Coördinaten zijn bij benadering.
        var steengroeven = [
            { name: "Carrières Marbres et Pierres d'Yvoir", location: [50.316, 4.833], material: "Kalksteen, Marmer", alt_names: ["Kalksteen van Yvoir", "Marmer", "Grès d'Yvoir", "Grès jaune", "Pierre bleue d'Yvoir (Petit granit du Bocq)"], website: "https://www.mpydapsens.be/" }, // Yvoir
