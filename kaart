            { name: "Carrière New Wal Pierre S.A.", location: [50.250, 4.933], material: "Niet gespecificeerd" },
            { name: "Carrière de Mouzalve-Cardem S.A.", location: [50.816, 4.383], material: "Niet gespecificeerd" },
            { name: "Ardoisières d'Herbeumont S.A.", location: [49.783, 5.316], material: "Leisteen" },
            { name: "Nelles S.A. (Les Carrières de la Warche)", location: [50.966, 5.466], material: "Leisteen, Zandsteen" },
            { name: "Steengroeve van Balegem", location: [50.900, 3.833], material: "Zandsteen" }
        ];

        // Add markers to the map
        steengroeven.forEach(function(steengroeve) {
            var marker = L.marker(steengroeve.location).addTo(map);
            var popupContent = `<b>${steengroeve.name}</b><br>Plaats: ${steengroeve.location}<br>Materiaal: ${steengroeve.material}`;
            if (steengroeve.alt_names) {
                popupContent += `<br>Alternatieve namen: ${steengroeve.alt_names.join(', ')}`;
            }
            if (steengroeve.composition) {
                popupContent += `<br>Samenstelling: ${steengroeve.composition}`;
            }
            if (steengroeve.website) {
                popupContent += `<br>Website: <a href="${steengroeve.website}" target="_blank">${steengroeve.website}</a>`;
            }
            marker.bindPopup(popupContent);
        });

